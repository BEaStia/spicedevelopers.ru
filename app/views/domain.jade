extends layout
block domain
        .about
            .container
                h1.m_1
                    | Search the best domain
                    form.search-form.domain-search
                        .three-fifth.column.first
                            input.text(type='text', value='Looking for Domains ?', onfocus="this.value = '';", onblur="if (this.value == '') {this.value = 'Looking for Domains ?';}")
                        .one-fifth.column
                            span.selection-box
                                select.domains.valid(name='domains')
                                    option .com (From $3 / Year)
                                    option .info (From $3 / Year)
                                    option .net (From $3 / Year)
                                    option .org (From $3 / Year)
                        .one-fifth.column
                            input(type='submit', value='Send Now')
                        .clearfix
                    .new_domain
                        h2 New Domains
                        .col-md-6
                            ul.list_3
                                li
                                    span .nyc
                                    a.dt-sc-button.small(href='#', target='_blank') Register
                                li
                                    span .vegas
                                    a.dt-sc-button.small(href='#', target='_blank') Register
                                li
                                    span .website
                                    a.dt-sc-button.small(href='#', target='_blank') Register
                                li
                                    span .app
