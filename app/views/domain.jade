                                li
                                    span .do
                                    a.dt-sc-button.small(href='#', target='_blank') Register
                                li
                                    span .go
                                    a.dt-sc-button.small(href='#', target='_blank') Register
                                li
                                    span .zipo
                                    a.dt-sc-button.small(href='#', target='_blank') Register
                        .clearfix
        .contact_index
            .container
                .col-md-8.contact_index-left
                    h3 Send Us A Message
                    .contact-form
                        form
                            input.textbox(type='text', value='Email', onfocus="this.value = '';", onblur="if (this.value == '') {this.value = 'Email';}")
                            textarea(value='Message:', onfocus="this.value = '';", onblur="if (this.value == '') {this.value = 'Message';}") Message
                            input(type='submit', value='Send Now')
                .col-md-4.contact_index-right
                    h3 Quick Links
