extends layout

block content
    section
        .text-center(style='background: #FFFFFF url(/img/right_curtain.png); background-repeat:no-repeat')
            .container-fluid
                .row-fluid
                    .col-lg-3
                        img.pull-left(src='/img/logo.png', width='413', height='181', alt='Logo')
                    .col-md-4.col-md-offset-5
                        ul.nav-stacked.nav-pills.nav.well
                            li(role='presentation')
                                a(href='/index') Главная
                            li(role='presentation')
                                a(href='/contacts') Контакты
                            li(role='presentation')
                                a(href='/jobs') Вакансии
                            li(role='presentation')
                                a(href='/services') Услуги
                            li.active(role='presentation')
                                a(href='#') Портфолио
                            li(role='presentation')
                                a(href='/about') Отзывы
                            li(role='presentation')
                                a(href='/lessons') Уроки
            .container-fluid
                .row-fluid
                    .col-lg-2 !{banner}
                    .col-lg-8
                        .well
                            .modal-header
                                h4.text-danger
                                    strong Примеры наших работ:
                            .text-left
                                #carousel1.carousel.slide(data-ride='carousel')
                                    ol.carousel-indicators
                                        li.active(data-target='#carousel1', data-slide-to='0')
                                        li(data-target='#carousel1', data-slide-to='1')
                                        li(data-target='#carousel1', data-slide-to='2')
                                    .carousel-inner(role='listbox')
                                        .item.active
                                            img.center-block(src='/images/auto2.png', alt='Auto Parser')
                                            .carousel-caption
                                                h3 Auto Parser
                                                p Приложение для поиска автомобилей
                                        .item
                                            img.center-block(src='/images/auto.png', alt='Second slide image')
                                            .carousel-caption
                                                h3 Auto Parser
                                                p Приложение для поиска автомобилей
                                        .item
                                            img.center-block(src='/images/android.PNG', alt='Third slide image')
                                            .carousel-caption
                                                h3 Android app
                                                p Не чужды нам и мобильные приложения
                                        .item
                                            img.center-block(src='/images/farm.jpg', alt='Third slide image')
                                            .carousel-caption
                                                h3 Территория Фермеров
                                                p И в этом проекте мы участвовали более двух лет
                                        .item
                                            img.center-block(src='/images/finder.png', alt='Third slide image')
                                            .carousel-caption
                                                h3 Учебный проект №1
                                                p Поиск оптимальных путей
                                        .item
                                            img.center-block(src='/images/zmei.png', alt='Third slide image')
                                            .carousel-caption
                                                h3 Змейка
                                                p Игра на Unity3D
                                        .item
                                            img.center-block(src='/images/zmei2.png', alt='Third slide image')
                                            .carousel-caption
                                                h3 Змейка
                                                p Игра на Unity3D
                                        .item
                                            img.center-block(src='/images/Снимок.PNG', alt='Third slide image')
                                            .carousel-caption
                                                h3 Поиск пути по городам
                                                p .NET приложение
                                        .item
                                            img.center-block(src='/images/Снимок1.PNG', alt='Third slide image')
                                            .carousel-caption
                                                h3 Кластеры по расстояниям между городами
                                                p И математика нам не чужда
                                        .item
                                            img.center-block(src='/images/окна.png', alt='Third slide image')
                                            .carousel-caption
                                                h3 Продажа окон
                                                p Да, чего мы только не делаем
                                        .item
                                            img.center-block(src='/images/шуя.png', alt='Third slide image')
                                            .carousel-caption
                                                h3 Шуя-аудит.рф
                                                p И сайты мы тоже умеем
                                a.left.carousel-control(href='#carousel1', role='button', data-slide='prev')
                                    span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
                                    span.sr-only Previous
                                a.right.carousel-control(href='#carousel1', role='button', data-slide='next')
                                    span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
                                    span.sr-only Next
        .container-fluid(style='margin-top: 20px')
            .row-fluid
                .row
                    img.img-responsive(src='/img/bottom.png', alt='Placeholder image')
            .row(style='margin-top:40px')
                .col-lg-6.col-lg-offset-3.text-center
                    h2
                        p Остались вопросы?
                        p Свяжитесь с нами
                    form(role='form', action='MAILTO:spicecoders@gmail.com', method='post', enctype='text/plain')
                        .col-lg-12
                            .alert-info
                                span.glyphicon.glyphicon-ok
                                |  - Обязательные поля
                            .form-group
                                label(for='InputName') Как Вас зовут
                                .input-group
                                    input#InputName.form-control(type='text', name='InputName', placeholder='', required='')
                                    span.input-group-addon
                                        i.glyphicon.glyphicon-ok.form-control-feedback
                            .form-group
                                label(for='InputEmail') Ваш Email
                                .input-group
                                    input#InputEmail.form-control(type='email', name='InputEmail', placeholder='Email', required='')
                                    span.input-group-addon
                                        i.glyphicon.glyphicon-ok.form-control-feedback
                            .form-group
                                label(for='InputMessage') Сообщение
                                .input-group
                                    textarea#InputMessage.form-control(name='InputMessage', rows='5', required='')
                                    span.input-group-addon
                                        i.glyphicon.glyphicon-ok.form-control-feedback
                            input#submit.btn.btn-info(type='submit', name='submit', value='Отправить')
